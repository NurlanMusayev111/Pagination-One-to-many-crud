@model List<SliderVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5 mx-5">
    <div class="create-slider">
        <a asp-area="admin" asp-controller="Slider" asp-action="Create" class="btn btn-success text-white" style="font-size:30px;width120px">+</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th> Slider Image </th>
                <th> Operations </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="py-1">
                        <img src="~/img/@item.Image" style="height:150px;width:150px" />
                    </td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info text-white">Info</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white">edit</a>
                        <form class="d-inline" asp-action="Delete" method="post" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger text-white">delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
