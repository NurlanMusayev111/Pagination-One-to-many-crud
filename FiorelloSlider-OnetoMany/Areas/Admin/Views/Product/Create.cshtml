@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h3 class="text-center text-success">Create New Product</h3>
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>

            <label>Description</label>
            <input asp-for="Description" class="form-control mt-3" />
            <span class="text-danger" asp-validation-for="Description"></span>

            <label>Price</label>
            <input asp-for="Price" class="form-control mt-3" />
            <span class="text-danger" asp-validation-for="Price"></span>

            <label>Category</label>
            <select class="form-control mt-3" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                
            </select>

            <label>Images</label>
            <input asp-for="Images" class="form-control mt-3" />
            <span class="text-danger" asp-validation-for="Images"></span>
        </div>
        <button class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">back</a>
    </form>
</div>


